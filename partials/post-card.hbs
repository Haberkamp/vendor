<div class="w-full rounded mb-8 shadow-sm border-light-grey hover:border-accent-light border overflow-hidden">
  <a href="{{ url }}">
    <img src="{{ feature_image }}" alt="">
  </a>

    <div class="px-6 py-4">

      <div class="relative mb-3 z-0">
        <a class="hover:no-underline" href="{{ url }}">
          <h3 class="text-xl font-semibold my-0 mr-16 capitalize leading-tight break-word">{{ title }}</h3>
        </a>

        <a class="text-sm" href="{{ primary_author.url }}">{{ primary_author.name }}</a>

        <a class="absolute top-0 right-0" href="{{ primary_author.url }}">
          <img class="box-content w-10 h-10 rounded-full border-2 border-transparent hover:border-accent-light"
            src="{{ primary_author.profile_image }}"
            alt="">
        </a>
      </div>

      <a class="text-md text-black hover:no-underline" href="{{ url }}">
        {{ excerpt characters="120" }}{{#unless custom_excerpt}}...{{/unless}}
      </a>
    </div>
</div>