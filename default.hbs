<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ @site.title }}</title>

    {{!-- Meta data for SEO --}}
    <meta name="description" content="{{ @site.description }}">

    {{!-- Favicon --}}
    <link rel="shortcut icon" href="{{ @site.icon }}" type="image/x-icon">

    {{!-- Importing styles --}}
    <link rel="stylesheet" href="{{ asset 'dist/css/all.css' }}">

    {{!-- Importing font --}}
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Rubik:ital,wght@0,400;0,500;0,700;1,400;1,500&display=swap" rel="stylesheet">

    <script src="{{ asset 'dist/scripts/index.js' }}" defer></script>

    {{ ghost_head }}
</head>
<body class="bg-white overflow-x-hidden">

    {{> header }}

    {{{ body }}}

    {{> footer }}

    {{ ghost_foot }}
</body>

</html>